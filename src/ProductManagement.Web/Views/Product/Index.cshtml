@model IEnumerable<ProductManagement.Application.DTOs.ProductDto>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">Product List</h1>
        <a href="/Product/Create" class="btn btn-success">Add Product</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Is Available</th>
                <th>Description</th>
                <th>Price</th>
                <th>Created At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model) {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@(product.IsAvailable ? "Yes" : "No")</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <a href="/Product/Edit/@product.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Product/Delete/@product.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
